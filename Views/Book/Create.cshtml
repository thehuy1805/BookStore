            <div class="form-group">
                <label class="control-label">Image</label>
                <input class="form-control" type="file" name="myfile" />
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <select asp-for="Author" class="form-control" asp-items="ViewBag.Author"></select>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control" asp-items="ViewBag.Category"></select>
            </div>
            <div class="form-group">
                <label asp-for="Publisher" class="control-label"></label>
                <select asp-for="Publisher" class="form-control" asp-items="ViewBag.Publisher"></select>
            </div>
